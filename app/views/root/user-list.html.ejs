<div class="box box-danger">

    <div class="box-header with-border">
        <h3 class="box-title" loc-html>Latest Members</h3>
        <div class="box-tools pull-right">
            <!--<span class="label label-danger">8 New Members</span>-->
            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body no-padding">
        <most-data data-model="Person"
                   data-select="id,description,image,givenName,familyName,dateCreated"
                   data-order="dateCreated desc"
                   data-top="8"
                   data-name="persons"></most-data>
        <ul class="users-list clearfix">
            <li ng-repeat="person in persons">
                <img src="{{person.image}}" alt="User Image" title="{{person.description}}">
                <a class="users-list-name" href="#" >{{person.givenName}}</a>
                <span class="users-list-date">{{ person.dateCreated | moment : 'DD MMM'}}</span>
            </li>
        </ul><!-- /.users-list -->
    </div><!-- /.box-body -->
    <div class="box-footer text-center">
        <a href="#" class="uppercase">View All Users</a>
    </div><!-- /.box-footer -->
</div>