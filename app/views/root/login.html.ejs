<%# { "layout":"/views/shared/empty.html.ejs", "title":"Login" } %>
<div class="login-box">
  <div class="login-logo">
    <a href="/home.html"><b>MOST Web Framework</b>Templates</a>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
    <form action="<%=context.request.url%>" method="post">
      <%- locals.html.antiforgery() %>
      <div class="form-group has-feedback">
        <input type="text" class="form-control" value="alexis.rees@example.com" placeholder="Email" name="username">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" value="user" class="form-control" placeholder="Password" name="password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
        <div class="form-group">
            <% if (locals.data.message) { %>
                <span class="text-danger"><%=locals.data.message%></span>
            <% } %>
        </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox" name="rememberMe"> Remember Me
            </label>
          </div>
        </div><!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
        </div><!-- /.col -->
      </div>
    </form>

    <!--<div class="social-auth-links text-center">-->
      <!--<p>- OR -</p>-->
